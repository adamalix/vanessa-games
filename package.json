{
  "name": "vanessa-games",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r --filter \"./apps/*\" exec tsc --noEmit --project tsconfig.json",
    "lint": "pnpm run typecheck && pnpm exec eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "pnpm run typecheck && pnpm exec eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build": "pnpm -r run build"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
